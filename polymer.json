{
  "basePath": "/",

  "entrypoint": "./index.html",
  "shell":      "./index.html",
  
  "fragments": [
    "./src/applic.js",
    "./src/applic.lazies.js",
    
    "./src/units/processing/applic.processing.js" ],

  "sources": [
    "./images/**/*",
    "./lib/**/*" ],

  "extraDependencies": [
    "./404.html", 
    "./manifest.json",
    "./node_modules/@webcomponents/webcomponentsjs/**/*.js",
    "./node_modules/dropbox/dist/Dropbox-sdk.min.js" ],

  "lint": { "rules": [ "polymer-3" ] },

  "moduleResolution": "node",
  "npm": true,

  "builds": [{
      "preset": "es5-bundled",
      "addServiceWorker": true,
      "addPushManifest": false
    }, {
      "preset": "es6-bundled",
      "addServiceWorker": true,
      "addPushManifest": false
    }, {
    "name": "esm-bundled",
    "browserCapabilities": [ "es2015", "modules" ],
    "js": { "minify": true, "compile": true },
    "css": { "minify": true, "compile": true },
    "html": { "minify": true, "compile": true },
    "bundle": true,
    "addServiceWorker": true,
    "addPushManifest": false
  }]
}
