{
  "entrypoint": 
    "./index.html",
  "shell": 
    "./source/applic.js",
  "fragments": [
    "./source/applic.lazies.js",
    "./source/applic.wireframe.js" ],

  "sources": [
    "./static/**/*" ],

  "extraDependencies": [
    "./404.html", "./oauth2/index.html",
    "./static/manifest.json",
    "./node_modules/@webcomponents/webcomponentsjs/**/*.js",
    "./node_modules/dropbox/dist/Dropbox-sdk.min.js",
    "./favicon.ico"],

  "lint": { "rules": [ "polymer-3" ] },

  "moduleResolution": "node",
  "npm": true,

  "builds": [{
    "name": "esm-bundled",
    "browserCapabilities": [ "es2015", "modules" ],
    "js": { "minify": true, "compile": true },
    "css": { "minify": true, "compile": true },
    "html": { "minify": true, "compile": true },
    "bundle": true,
    "addServiceWorker": false,
    "addPushManifest": false
  }, {
    "name": "public",
    "browserCapabilities": [ "es2015", "modules" ],
    "js": { "minify": true, "compile": true },
    "css": { "minify": true, "compile": true },
    "html": { "minify": true, "compile": true },
    "bundle": true,
    "addServiceWorker": true,
    "addPushManifest": false
  }]
}
